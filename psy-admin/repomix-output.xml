    defineField({
      name: 'tags',
      title: '–¢–µ–≥–∏ —Å—Ç–∞—Ç—å–∏',
      description: '–í—ã–±–µ—Ä–∏—Ç–µ —Ç–µ–≥–∏, –∫–æ—Ç–æ—Ä—ã–µ –ø–æ—è–≤—è—Ç—Å—è –≤–Ω–∏–∑—É —Å—Ç–∞—Ç—å–∏',
      type: 'array',
      of: [{ type: 'reference', to: { type: 'tag' } }],
      options: {
        layout: 'tags', // –ö—Ä–∞—Å–∏–≤–æ–µ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤ –≤–∏–¥–µ "–ø–∏–ª—é–ª—å" –≤ –∞–¥–º–∏–Ω–∫–µ
      },
      group: 'seo', 
    }),
    // === –ö–û–ù–ï–¶ –ë–õ–û–ö–ê: Post Tags Field ===
    defineField({
      name: 'author',
      title: 'Author',
      type: 'reference',
      to: [{ type: 'author' }], 
      group: 'content'
    }),
    defineField({
