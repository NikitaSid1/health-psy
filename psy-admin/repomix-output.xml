  groups: [
    { name: 'content', title: '–ö–æ–Ω—Ç–µ–Ω—Ç', default: true },
    { name: 'seo', title: 'SEO & Meta' },
    { name: 'settings', title: '–ù–∞—Å—Ç—Ä–æ–π–∫–∏' },
  ],
  fields: [
    // --- –í–ö–õ–ê–î–ö–ê: –ù–ê–°–¢–†–û–ô–ö–ò ---
    defineField({
      name: 'language',
      title: 'üåê –Ø–∑—ã–∫ —Å—Ç–∞—Ç—å–∏',
      type: 'string',
      readOnly: true,
      hidden: true,
      group: 'settings'
    }),
    defineField({
      name: 'translationId',
      title: 'Translation ID (Group ID)',
      type: 'string',
      description: '–ü—Ä–∏–¥—É–º–∞–π—Ç–µ –æ–¥–∏–Ω–∞–∫–æ–≤—ã–π ID –¥–ª—è –≤—Å–µ—Ö –≤–µ—Ä—Å–∏–π –æ–¥–Ω–æ–π —Å—Ç–∞—Ç—å–∏ (–Ω–∞–ø—Ä–∏–º–µ—Ä: "anxiety-01"). –≠—Ç–æ —Å–≤—è–∂–µ—Ç –∏—Ö –ø–µ—Ä–µ–∫–ª—é—á–∞—Ç–µ–ª–µ–º.',
      group: 'settings'
    }),
    defineField({
      name: 'publishedAt',
      title: 'Published at',
      type: 'datetime',
      initialValue: () => new Date().toISOString(),
      group: 'settings'
    }),

    // --- –í–ö–õ–ê–î–ö–ê: –ö–û–ù–¢–ï–ù–¢ ---
    defineField({
      name: 'title',
      title: 'Title (–ó–∞–≥–æ–ª–æ–≤–æ–∫)',
      type: 'string',
      group: 'content',
      validation: (Rule) => Rule.required(),
    }),
    defineField({
      name: 'slug',
      title: 'Slug (URL —Å—Ç–∞—Ç—å–∏)',
      type: 'slug',
      group: 'content',
      options: {
        source: 'title',
        maxLength: 96,
        isUnique: async (value, context) => {
          const { document, getClient } = context;
          const client = getClient({ apiVersion: '2024-02-16' });
          const id = document?._id.replace(/^drafts\./, '');
          
          const params = {
            draft: `drafts.${id}`,
            published: id,
            slug: value as string,
          };
          
          const query = `!defined(*[!(_id in [$draft, $published]) && slug.current == $slug][0]._id)`;
          return await client.fetch(query, params);
        },
      },
      validation: (Rule) => Rule.required(),
    }),

    // === –ò–ó–ú–ï–ù–ï–ù–ò–ï –ó–î–ï–°–¨: –ö–∞—Ç–µ–≥–æ—Ä–∏—è —Å—Ç–∞–ª–∞ Reference (—Å—Ç—Ä–æ–≥–∞—è –ø—Ä–∏–≤—è–∑–∫–∞) ===
    defineField({
